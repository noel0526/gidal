<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.gidal.mapper.EventMapper">

	<select id="closedEventListAll" resultType="org.gidal.event.domain.EventVO">
		<![CDATA[
		SELECT 
			* 
		FROM 
			event 
		WHERE 
			event_endDate <= now() 
		ORDER BY 
			event_no DESC;
		]]>  
	</select>
	
	<select id="currentEventListAll" resultType="org.gidal.event.domain.EventVO">
		<![CDATA[
		SELECT 
			* 
		FROM 
			event 
		WHERE 
			event_startDate <= now() AND event_endDate >= now() 
		ORDER BY 
			event_no DESC;
		]]>  
	</select>
	
	<select id="upcomingEventListAll" resultType="org.gidal.event.domain.EventVO">
		<![CDATA[
		SELECT 
			* 
		FROM 
			event 
		WHERE 
			event_startDate >= now() 
		ORDER BY 
			event_no DESC;
		]]>  
	</select>
	
	<select id="detailEvent" resultType="org.gidal.event.domain.EventVO">
		SELECT
			*
		FROM
			event
		WHERE
			event_no = #{event_no}
	</select>
	
</mapper>